---
import { SITE_URL } from '@/lib/constants'

import { InstallationTabsModule } from './_module'
import { type CommandLine, PACKAGE_MANAGER_COMMAND_LINE_MAP, PACKAGE_MANAGERS } from './lib'

// Props
interface Props {
	registryName: string
}
const { registryName } = Astro.props

// Command lines
const commandLines: CommandLine[] = PACKAGE_MANAGERS.map((packageManager) => ({
	packageManager,
	command: `${PACKAGE_MANAGER_COMMAND_LINE_MAP[packageManager]} shadcn@latest add ${SITE_URL}/r/${registryName}.json`
}))
---

<!-- Template -->
<InstallationTabsModule client:load commandLines={commandLines} />
